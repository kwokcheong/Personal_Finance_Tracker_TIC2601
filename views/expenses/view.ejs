                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Income Records
                        </div>
                        <div class="card-body">
                            <table id="datatablesSimple">
                                <thead>
                                    <tr>
                                        <th>DATE</th>
                                        <th>CATEGORY</th>
                                        <th>DESCRIPTION</th>
                                        <th>AMOUNT</th>
                                        <th>RECURRING</th>
                                        <th>CONTROLS</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>DATE</th>
                                        <th>CATEGORY</th>
                                        <th>DESCRIPTION</th>
                                        <th>AMOUNT</th>
                                        <th>RECURRING</th>
                                        <th>CONTROLS</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% for(var i=0; i<result.length; i++) { %>
                                        <tr>
                                            <td>
                                                <%= result[i].created_at.toISOString().slice(0, 10).replace('T', ' ' );
                                                    %>
                                            </td>
                                            <td>
                                                <%= result[i].category %>
                                            </td>
                                            <td>
                                                <%= result[i].name %>
                                            </td>
                                            <td>
                                                <%= result[i].amount %>
                                            </td>
                                            <td>
                                                <%= result[i].recurring==1 ? 'Yes' : 'No' %>
                                            </td>
                                            <td>
                                                <a href="/expenses/delete/<%= result[i].expensesID %>"><i
                                                        class="fas fa-trash"></i></a>
                                                <a href="/expenses/edit/<%= result[i].expensesID %>"><i
                                                        class="fas fa-edit"></i></a>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
