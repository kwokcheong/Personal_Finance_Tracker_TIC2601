            <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <!-- main website starts here -->
                            <div class="row">
                                <div class="col-xl-6">
                                    <h1 class="mt-4">Money Insight</b></h1>
                                </div>
                                <div class="col-xl-6 top">
                                    <input class="form-control" type="month" name="recurring_date"/>
                                </div>
                            </div>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item active"></li>
                            </ol>
                            <div class="row">
                                <div class="col-xl-6">
