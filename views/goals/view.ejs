        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <!-- main website starts here -->
                    <div class="row p-md-3">
                        <div class="col mt-2 mb-2">
                          <h1 class="float-start">Your Goals üèùÔ∏è</h1>
                        </div>
                        <div class="col mt-2 mb-2">
                          <button type="button" class="btn btn-info btn-lg float-end" data-toggle="modal"
                          data-target="#myModal">Add New Goal</button>
                        </div>
                      </div>
                      <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">
                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Create New Goal</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <form action="/goals/save" method="POST">
                                            <!-- name -->
                                            <div class="form-group">
                                                <label for="name">name</label>
                                                <input class="form-control" type="text" name="name" placeholder="Name" required />
                                            </div>
                                            <!-- image -->
                                            <div class="form-group">
                                                <label for="image_url">Image url</label>
                                                <input class="form-control" type="text" name="image_url" value='' placeholder="Paste image url here"/>
                                            </div>
                                            <div class="form-group">
                                                <label for="description">Description</label>
                                                <input class="form-control" type="textfield" name="description" placeholder="Add description"  maxlength="150" />
                                            </div>
                                            <div class="form-group">
                                                <label for="amount">Amount</label>
                                                <input class="form-control" type="number" min="1" step="any" name="amount"
                                                    placeholder="Amount" required />
                                            </div>
                                            <label for="start_date">Goal Start Date</label>
                                            <div class="form-group">
                                                <input class="form-control" type="date" id="today" name="start_date"
                                                    placeholder="Add start date" required />
                                            </div>
                                            <label for="end_date">Goal End Date</label>
                                            <div class="form-group">
                                                <input class="form-control" type="date" id="enddate" name="end_date"
                                                    placeholder="Add end date" required />
                                            </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary" value="add">Add Record</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>            

                    <img id="banner" src="../../images/banner.jpg" alt="island" width="100%" height="500"/>

                    <!-- in page nav-->
                    <div class="card text-left">
                        <div class="card-header">
                            <ul class="nav nav-pills card-header-pills">
                                <li class="nav-item">
                                    <a id="not_completed" class="nav-link" href="/goals/view" style="text-decoration: none;">Active</a>
                                </li>
                                <li class="nav-item">
                                    <a id="completed" class="nav-link" href="/goals/view/completed" style="text-decoration: none;">Completed</a>
                                </li>
                            </ul>
                        </div>
                        <!-- cards -->
                        <% if(result.length == 0 && state == 'active') { %>
                            <div class="row mt-5">
                                <h5 style="justify-content: center; text-align: center;">oops, you haven't added any goals yet. Create one now!</h5>
                            </div>
                        <% } %>
                        <% if(result.length == 0 && state == 'completed') { %>
                            <div class="row mt-5">
                                <h5 style="justify-content: center; text-align: center;">No completed goals yet.</h5>
                            </div>
                        <% } %>
                        <div class="card-body" style="text-align: center; display: flex; flex-wrap: wrap; padding: 2%; justify-content: flex-start;">
                            <% for(var i=0; i<result.length; i++) { %>
                                <div class="goalcard" id="goalcards">
                                    <% let defaultimg = '../../images/banana.jpg'; %>
                                    <div class="bg" style="background-image: url('<%= result[i].image_url !== null ? result[i].image_url : defaultimg  %>')"></div>
                                    <% if (state == "active") { %>
                                        <a href="check/<%= result[i].goalID %>" class="completed"><i class="fa fa-check" style="color: lightgray;" aria-hidden="true"></i></a>
                                    <% } %>
                                    <div class="info">
                                        <div class="name"><%= result[i].name %></div>
                                      <div class="price">$<%= result[i].amount %></div>
                                      <div><p style="font-size: 11px;"><%= result[i].description %></p></div>
                                      <% if(result[i].possible == '1' && state == 'active') { %>
                                            <div class="buy" style="background-color: #2f9211;">Possible</div>
                                      <% } %>
                                      <% if(result[i].possible == '0' && state == 'active') { %>
                                        <div class="buy">Not Possible</div>
                                      <% } %>
                                      <% if(state == 'completed') { %>
                                        <div class="buy" style="background-color: darkgrey;">Completed</div>
                                      <% } %>
                                    </div>
                                  </div>
                            <% } %>
                        </div>
                            <div class="card-body">
                                <table id="datatablesSimple">
                                    <thead>
                                        <tr>
                                            <th>name</th>
                                            <th>Amount</th>
                                            <th>Start date</th>
                                            <th>End date</th>
                                            <th>Control</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>name</th>
                                            <th>Amount</th>
                                            <th>Start date</th>
                                            <th>End date</th>
                                            <th>Control</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <% for(var i=0; i<result.length; i++) { %>
                                            <tr>
                                                <td>
                                                    <%= result[i].name %>
                                                </td>
                                                <td>
                                                    <%= result[i].amount %>
                                                </td>
                                                <td>
                                                    <%= result[i].start_date.toISOString().split('T')[0] %>
                                                </td>
                                                <td>
                                                    <%= result[i].end_date.toISOString().split('T')[0] %>
                                                </td>
                                                <td>
                                                    <a href="/goals/delete/<%= result[i].goalID %>"><i
                                                            class="fas fa-trash"></i></a>
                                                    <a href="/goals/edit/<%= result[i].goalID %>"><i
                                                            class="fas fa-edit"></i></a>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                            </div>
                        <!-- ends here -->
                    </div>
