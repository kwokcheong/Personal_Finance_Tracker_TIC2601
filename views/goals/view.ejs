    <script>
        let state = '<%- state %>';
        let not_completed = document.getElementById("not_completed");
        let completed = document.getElementById("completed");
        if(state == 'completed'){
            not_completed.className.replace(" active", "");
            completed.className += " active";
        } else {
            not_completed.className += " active";
        }

    </script>
